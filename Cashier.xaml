<Window x:Class="SmallStore.Cashier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmallStore"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Cashier Page" Height="960.687" Width="1257.554">

    <Grid Margin="0,0,0,30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="257*"/>
            <ColumnDefinition Width="437*"/>
        </Grid.ColumnDefinitions>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Width="693" Grid.ColumnSpan="2">
            <MenuItem Header="Change password">
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="_Info" />
                <MenuItem Header="A_bout" />
            </MenuItem>
        </Menu>
        <Grid Grid.ColumnSpan="2" Margin="0,0,0,26" HorizontalAlignment="Left" Width="1155">
            <TabControl HorizontalAlignment="Left"
		    Height="897"
		    Margin="0,25,-91,-45"
		    VerticalAlignment="Top"
		    Width="1246"
		    RenderTransformOrigin="0.518,-0.166">
                <TabItem Header="Orders" Width="240">
                    <Grid Background="#FFE5E5E5" Margin="0,-3,-6,-6">
                        <DataGrid x:Name="dgProducts"  AutoGenerateColumns="False" Margin="20,81,697,0" Height="783" VerticalAlignment="Top" SelectionChanged="dgProducts_SelectionChanged"  >
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Group" Binding="{Binding ProductName}" Width="5*" />
                                <DataGridTextColumn Header="Product" Binding="{Binding NumberInStock}" Width="5*" />
                                <DataGridTextColumn Header="Stock" Binding="{Binding SalePrice}" Width="5*" />
                                <DataGridTextColumn Header="Stock" Binding="{Binding SalePrice}*{Binding SpecialDiscount}" Width="5*" />
                            </DataGrid.Columns>
                        </DataGrid>
                        <Label Content="Product name or barcode" HorizontalAlignment="Left" Margin="22,5,0,0" VerticalAlignment="Top" Width="154"/>
                        <TextBox x:Name="tbProdNameOrBarcode"  HorizontalAlignment="Left" Height="30" Margin="20,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="306" TextChanged="tbProdNameOrBarcode_TextChanged"/>
                        <DataGrid x:Name="dgOrders" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto" AutoGenerateColumns="False" Margin="674,81,43,0" Height="443" VerticalAlignment="Top" >
                            <DataGrid.Columns>
                                
                            </DataGrid.Columns>
                        </DataGrid>
                        <Button x:Name="button"   HorizontalAlignment="Left" Height="82" Margin="570,360,0,0" VerticalAlignment="Top" Width="81" ToolTip="Add Item to purches List">

                            <StackPanel Orientation="Horizontal" Margin="10">
                                <Image Source="pack://application:,,,/Images/add_to_basket.png" Width="46" Height="52" Margin="0,0,10,0"/>
                                <TextBlock RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform/>
                                            <SkewTransform/>
                                            <RotateTransform Angle="-11.87"/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </TextBlock.RenderTransform></TextBlock>
                            </StackPanel>


                        </Button>
                    </Grid>
                </TabItem>
                <TabItem Header="Customers" Width="240">
                    <Grid Background="#FFE5E5E5" Margin="0,0,-107,0">
                        <TextBlock HorizontalAlignment="Left"
			       Margin="10"
			       TextWrapping="Wrap"
			       Text="I want some cheese."
			       VerticalAlignment="Top"
			       Width="471"/>
                    </Grid>

                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
