        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Change Password" Height="297.14" Width="700">
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="27" VerticalAlignment="Top" Width="693">
            <MenuItem Header="File">
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="_Info" />
                <MenuItem Header="A_bout" />
            </MenuItem>
        </Menu>
        <Label x:Name="label1" Content="Old Password:" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Height="38" Margin="27,47,0,0" VerticalAlignment="Top" Width="209"/>
        <Label x:Name="label2" Content="New Password:" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Height="38" Margin="27,107,0,0" VerticalAlignment="Top" Width="209"/>
        <PasswordBox x:Name="OldpasswordBox" HorizontalAlignment="Left" Height="34" Background="Transparent" FontSize="18" BorderThickness="2" Margin="241,51,0,0" VerticalAlignment="Top" Width="198"/>
