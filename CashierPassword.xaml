        <PasswordBox x:Name="NewpasswordBox2" HorizontalAlignment="Left" Height="34" Background="Transparent" FontSize="18" BorderThickness="2" Margin="241,163,0,0" VerticalAlignment="Top" Width="198"/>
        <Button x:Name="btnSubmit" Content="Change" HorizontalAlignment="Left" Height="34" FontSize="18" Foreground="Black" FontWeight="Bold" Margin="457,163,0,0" VerticalAlignment="Top" Width="198"/>
        <Label x:Name="label5" Foreground="Red" FontSize="18" FontWeight="Bold" Content="Invalid Password. Please Try again" HorizontalAlignment="Left" Height="39" Margin="187,215,0,0" VerticalAlignment="Top" Width="303"/>

    </Grid>
